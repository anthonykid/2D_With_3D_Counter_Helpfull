<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@color/purple_200"
    android:id="@+id/widget27">

    <LinearLayout
        android:layout_height="280dp"
        android:layout_width="300dp"
        android:id="@+id/widget28"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/widget30"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Masukkan Sisi Kubus">
        </TextView>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:id="@+id/sisi"
            android:textSize="20dp">
        </EditText>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/widget32"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Hasil Perhitungan Luas Permukaan Kubus">
        </TextView>

        <TextView
            android:layout_height="45dp"
            android:layout_width="200dp"
            android:id="@+id/luas"
            android:textColor="@color/teal_700"
            android:textSize="20dp">
        </TextView>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/widget33"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Hasil Perhitungan Volume Kubus">
        </TextView>

        <TextView
            android:layout_height="45dp"
            android:layout_width="200dp"
            android:id="@+id/volume"
            android:textColor="@color/teal_700"
            android:textSize="20dp">
        </TextView>
    </LinearLayout>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/count"
        android:text="Menghitung"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_alignRight="@+id/widget28"
        android:layout_below="@+id/widget28">
    </Button>

</RelativeLayout>